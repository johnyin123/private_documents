write_files:
  - path: /root/.cloud.init
    owner: 'root:root'
    permissions: '0600'
    append: true
    content: |
      init cloud {{ vm_uuid | default('') }} {{ create_tm | default('') }}
growpart:
  mode: auto
  devices: ['/']
bootcmd:
  - echo "BOOT OK"
  - touch /etc/cloud/cloud-init.disabled
final_message: |
  cloud-init has finished
  datasource: $datasource
